        android:layout_centerHorizontal="true" />

            <ImageView
                android:id="@+id/imageViewclose"
                android:layout_width="20dip"
                android:layout_height="20dip"
                android:layout_centerHorizontal="true"
                android:src="@drawable/redclose" />
            
