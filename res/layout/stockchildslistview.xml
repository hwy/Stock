<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/childlayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff" >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/shape" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="@string/stockchildopen"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/textView1"
            android:text="@string/stockchildpopen"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000000" />
<TextView
            android:id="@+id/textViewopen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@+id/textView2"
            android:maxEms="3"
            android:maxLines="1"
            android:minEms="3"
            android:paddingLeft="5dip"
            android:text="000.00"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/textViewyopen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView2"
            android:layout_alignBottom="@+id/textView2"
            android:layout_alignLeft="@+id/textViewopen"
            android:maxEms="3"
            android:maxLines="1"
            android:paddingLeft="5dip"
            android:text="000.00"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/textView9"
            android:text="@string/stockchildqty"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView4"
            android:layout_alignBottom="@+id/textView4"
            android:layout_centerHorizontal="true"
            android:text="@string/stockchildsellprice"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/editTextsellprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView5"
            android:layout_centerHorizontal="true"
            android:hint="0"
            android:inputType="numberDecimal"
            android:maxEms="4"
            android:minEms="4"
            android:selectAllOnFocus="true"
            android:textAppearance="?android:attr/textAppearanceMedium" >

        </EditText>

        <EditText
            android:id="@+id/editTextstockqty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/editTextsellprice"
            android:layout_alignBottom="@+id/editTextsellprice"
            android:layout_alignParentLeft="true"
            android:hint="0"
            android:inputType="number"
            android:maxEms="6"
            android:minEms="4"
            android:nextFocusDown="@+id/editTextsellprice"
            android:selectAllOnFocus="true"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <Button
            android:id="@+id/buttonsell"
            style="@style/ButtonText"
            android:layout_width="wrap_content"
            android:layout_height="40dip"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/textView5"
            android:background="@drawable/yellowbtn"
            android:text="@string/stockchildsell" />

        <TextView
            android:id="@+id/textViewdayrange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textViewyopen"
            android:layout_alignParentRight="true"
            android:paddingLeft="5dip"
            android:text="000.00~000.00"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/textView52w"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/textViewdayrange"
            android:paddingLeft="5dip"
            android:text="000.00~000.00"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView52w"
            android:layout_centerHorizontal="true"
            android:text="@string/stockchilddp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/textView2"
            android:gravity="center_vertical"
            android:text="@string/stockchildbuy"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/textViewbuyprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textViewyopen"
            android:layout_below="@+id/textViewyopen"
            android:gravity="center_vertical"
            android:maxEms="3"
            android:maxLines="1"
            android:paddingLeft="5dip"
            android:text="000.00"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textViewbuyprice"
            android:layout_alignBottom="@+id/textViewbuyprice"
            android:layout_centerHorizontal="true"
            android:text="@string/stockchildbuydate"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/textViewdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/textView8"
            android:text="2012-12-12"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView6"
            android:layout_centerHorizontal="true"
            android:text="@string/stockchild52wp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/textViewamount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/textViewdate"
            android:background="@drawable/shape"
            android:gravity="right"
            android:minEms="5"
            android:text="000000.00"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000000" />

        <Button
            android:id="@+id/buttonedit"
            style="@style/ButtonText"
            android:layout_width="wrap_content"
            android:layout_height="40dip"
            android:layout_below="@+id/textViewamount"
            android:layout_toLeftOf="@+id/buttonsell"
            android:background="@drawable/bluebtn"
            android:text="@string/stockchildedite" />

    </RelativeLayout>

</LinearLayout>
    